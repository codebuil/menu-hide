import android.app.Activity;
import android.view.Menu;
import android.widget.ArrayAdapter;
import android.widget.ListView;
import android.widget.AdapterView;
import android.widget.AdapterView.OnItemClickListener;
import android.view.ViewGroup.LayoutParams;

public class MainActivity extends Activity
{
	boolean a;
	Context context;
	String[] menuarray={"menu1", "menu2","menu3","menu4","menu5","menu6","menu7","menu8","menu9","menu10"};
    /** Called when the activity is first created. */
    @Override
    public void onCreate(Bundle savedInstanceState)
    {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.main);
        a=false;
        context=this;

		final ListView lists = (ListView) findViewById(R.id.menus_list);

		ArrayAdapter adapter = new ArrayAdapter<String>(this,  R.layout.listview, menuarray);

		ListView listview = (ListView) findViewById(R.id.menus_list);
		listview.setAdapter(adapter);
		listview.setOnItemClickListener(new OnItemClickListener() {
				public void onItemClick(AdapterView<?> parent, View view,int position, long id) {
					setTitle(parent.getItemAtPosition(position).toString());
					if(position==0)onmenu1_click() ;
					if(position==1)onmenu2_click() ;
					if(position==2)onmenu3_click() ;
					if(position==3)onmenu4_click() ;
					if(position==4)onmenu5_click() ;
					if(position==5)onmenu6_click() ;
					if(position==6)onmenu7_click() ;
					if(position==7)onmenu8_click() ;
					if(position==8)onmenu9_click() ;
					if(position==9)onmenu10_click() ;
				}});
    }

	public void  onOk_click(View v) {
		a=!a;

		final ListView lists = (ListView) findViewById(R.id.menus_list);
		LayoutParams params = lists.getLayoutParams();

		if(a){
			lists.setVisibility(v.VISIBLE);
			params.height =200;

			lists.setLayoutParams(params);
		}

		if(!a){
			lists.setVisibility(v.INVISIBLE);
			params.height = 0;

			lists.setLayoutParams(params);
		}
	} 
	
	public void  onmenu1_click() {
		setTitle("menu1");
		System.setProperty("menu1","1");

					try{
						Intent intent = new Intent(context,MainActivity1.class);

						startActivity(intent);  

						finish(); 
					}catch(Exception e){}

				
	} 
	public void onmenu2_click() {
		setTitle("menu2");
